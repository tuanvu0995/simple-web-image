{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2019",
    "rootDir": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": ["es2019"],
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": ["dist", "node_modules", "src/**/*.test.ts"]
}
